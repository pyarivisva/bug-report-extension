{
  "manifest_version": 3,
  "name": "Vitback",
  "version": "1.0",
  "description": "Laporkan bug dengan menunjuk dan mengklik elemen.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_title": "Laporkan Bug",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "markup.html",
        "markup.js",
        "markup.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}