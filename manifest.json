{
  "manifest_version": 3,
  "name": "Bug Report",
  "description": "Simple Chrome Extension with React",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html",
    "default_title": "Bug Reporter"
  },
  "permissions": ["tabs", "activeTab", "scripting", "tabCapture"],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["contentScript.js"],
    "run_at": "document_idle"
  }
]
}